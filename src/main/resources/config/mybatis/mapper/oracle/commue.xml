<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="config.mybatis.mapper.oracle.commue">
	
	<insert id="insertIn" parameterType="int">
		<selectKey keyProperty="cmtNo" resultType="int" order="BEFORE">
			select cmt_seq.nextval from dual
		</selectKey>
			insert into commute(cmt_no,emp_no,cmt_in)
			values(#{cmtNo},#{empNo},sysdate)
	</insert>
	
	<update id="updateOut" parameterType="int">
		update commute
		set cmt_out=sysdate,cmt_status='N'
		where cmt_no=#{cmtNo}
	</update>
	
	<select id="selectAll" resultType="CommueVO">
		select * from commute
	</select>
</mapper>














