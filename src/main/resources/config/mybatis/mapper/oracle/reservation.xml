<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="config.mybatis.mapper.oracle.reservation">
	<sql id="searchWhere">
		<if test="searchKeyword !=null and searchKeyword!=''">
			where ${resCateg} like '%' || #{searchKeyword} || '%'
		</if>
	</sql>	
	<select id="selectReservationAll" parameterType="ReservationSearchVO" resultType="ReservationVO">
		select * from reservationView 
		<include refid="searchWhere"></include>
		order by rv_regdate desc
	</select>
	
	<insert id="insertReservation" parameterType="ReservationVO">
	<selectKey resultType="int" keyProperty="rvNo" order="BEFORE">
	select reser_seq.nextval from dual
	</selectKey>
		insert into reservation(rv_no,res_No,rv_start,rv_end,emp_no,rv_content)
		values(#{rvNo},#{resNo},#{rvStart},#{rvEnd},#{empNo},#{rvContent})
	</insert>
	
	
</mapper>








